<!DOCTYPE html>
<html>

<head>
  <% include ../includes/header.ejs %>
</head>

<body>
  <% include ../includes/nav.ejs %>
    <div class="jumbotron text-center">
      <div class="container">
        <h1>
          <%= title %>
        </h1>
        <p>This is the placeholder for Team Activity 02</p>
      </div>
    </div>
    <div class="container">
      <h2>Submission Form</h2>
      <form action="/ta02/addUser" method="POST">
        <h3>First Name:</h2>
          <input type="text" name="fname">
          <h3>Last Name:</h2>
            <input type="text" name="surname">
            <button type="submit">Submit User</button>
      </form>
    </div>
    <div class="container">
      <h2>Deletion Form</h2>
      <form action="/ta02/deleteUser" method="POST">
        <h3>First Name:</h2>
          <input type="text" name="fname">
          <h3>Last Name:</h2>
            <input type="text" name="surname">
            <button type="submit">Submit User</button>
      </form>
    </div>
    <div class="container">
      <h2>Users in list</h2>
      <ul>
        <% for(var i=0; i<users.length; i++) {%>
          <li>
            <%= users[i].lastName + ', ' + users[i].firstName %>
          </li>
          <% } %>
      </ul>
    </div>

</body>

</html>
